@model IEnumerable<GYM_ITM.Models.Espacio>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<form asp-controller="Espacios" asp-action="Index">
    <p>
        Buscar: <input type="text" name="buscar" class="form-text">
        <input type="submit" value="Buscar" class="btn btn-sm btn-dark">
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NombreEspacio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LimiteDisponibilidad)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NombreEspacio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LimiteDisponibilidad)
            </td>
            <td>
                <a asp-action="Edit" class="btn btn-warning" asp-route-id="@item.IdEspacio">Edit</a> |
                    <a asp-action="Details" class="btn btn-primary" asp-route-id="@item.IdEspacio">Details</a> |
                    <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.IdEspacio">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
