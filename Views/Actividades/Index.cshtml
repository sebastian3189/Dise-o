@model IEnumerable<GYM_ITM.Models.Actividades>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<form asp-controller="Actividades" asp-action="Index">
    <p>
        Buscar: <input type="text" name="buscar" class="form-text">
        <input type="submit" value="Buscar" class="btn btn-sm btn-dark">
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                <a asp-action="Index" asp-route-filtro="@ViewData["FiltroNombreActividad"]">
                    @Html.DisplayNameFor(model => model.NombreActividad)
                </a>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DescripcionActividad)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NombreActividad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DescripcionActividad)
            </td>
            <td>
                    <a asp-action="Edit" class="btn btn-warning" asp-route-id="@item.IdActividad">Edit</a> |
                    <a asp-action="Details" class="btn btn-primary" asp-route-id="@item.IdActividad">Details</a> |
                    <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.IdActividad">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
