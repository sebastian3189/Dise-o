@model GYM_ITM.Models.Actividades

@{
    ViewData["Title"] = "Eliminar Actividad";
}

<!-- Agrega Montserrat desde Google Fonts -->
<link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600;700&display=swap" rel="stylesheet">
<!-- Agrega Font Awesome para íconos -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

<style>
    /* Estilos generales */
    body {
        font-family: 'Montserrat', sans-serif;
        background: linear-gradient(rgba(38, 141, 215, 0.1), rgba(38, 141, 215, 0.1)), url('https://images.unsplash.com/photo-1571902943202-507ec2618e8f?ixlib=rb-4.0.3');
        background-size: cover;
        background-position: center;
        min-height: 100vh;
        margin: 0;
        padding: 0;
    }

    .form-container {
        background-color: rgba(255, 255, 255, 0.98);
        border-radius: 10px;
        padding: 30px;
        margin: 50px auto;
        box-shadow: 0 5px 20px rgba(38, 141, 215, 0.2);
        max-width: 600px;
        border-top: 4px solid #268DD7;
        font-family: 'Montserrat', sans-serif;
    }

    .form-title {
        color: #268DD7;
        margin-bottom: 20px;
        text-align: center;
        font-weight: 700;
    }

    h3 {
        color: #268DD7;
        font-family: 'Montserrat', sans-serif;
        text-align: center;
        font-weight: 600;
    }

    .btn-custom {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        font-family: 'Montserrat', sans-serif;
        font-weight: 600;
        border-radius: 50px;
        padding: 10px 30px;
        font-size: 16px;
        text-decoration: none;
        border: 2px solid transparent;
        transition: all 0.3s ease;
    }

    .btn-danger-custom {
        background-color: #dc3545;
        color: #fff;
        border-color: #dc3545;
    }

        .btn-danger-custom:hover {
            background-color: #c82333;
            border-color: #bd2130;
        }

    .btn-secondary-custom {
        background-color: transparent;
        color: #268DD7;
        border: 2px solid #268DD7;
    }

        .btn-secondary-custom:hover {
            background-color: rgba(38, 141, 215, 0.1);
        }

    .details-list {
        margin: 25px 0;
    }

    .details-item {
        display: flex;
        margin-bottom: 15px;
        padding-bottom: 10px;
        border-bottom: 1px solid #eee;
    }

    .details-label {
        font-weight: 600;
        color: #268DD7;
        min-width: 200px;
    }

    .details-value {
        flex: 1;
    }

    .button-group {
        display: flex;
        justify-content: center;
        gap: 20px;
        margin-top: 30px;
    }

    .confirmation-message {
        text-align: center;
        color: #dc3545;
        font-weight: 600;
        margin-bottom: 25px;
    }
</style>

<div class="form-container">
    <h2 class="form-title">⚠️ CONFIRMAR ELIMINACIÓN</h2>

    <div class="confirmation-message">
        ¿Seguro que quieres eliminar esta actividad? No podrás recuperarla.
    </div>

    <div class="details-list">
        <div class="details-item">
            <div class="details-label">@Html.DisplayNameFor(model => model.NombreActividad)</div>
            <div class="details-value">@Html.DisplayFor(model => model.NombreActividad)</div>
        </div>

        <div class="details-item">
            <div class="details-label">@Html.DisplayNameFor(model => model.DescripcionActividad)</div>
            <div class="details-value">@Html.DisplayFor(model => model.DescripcionActividad)</div>
        </div>
    </div>

    <form asp-action="Delete">
        <input type="hidden" asp-for="IdActividad" />
        <div class="button-group">
            <button type="submit" class="btn-custom btn-danger-custom">Confirmar Eliminación</button>
            <a asp-action="Index" class="btn-custom btn-secondary-custom">Cancelar</a>
        </div>
    </form>
</div>