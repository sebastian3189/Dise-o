@model GYM_ITM.Models.Actividades

@{
    ViewData["Title"] = "Eliminar Actividad";
}

<!-- Agrega Montserrat desde Google Fonts -->
<link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600;700&display=swap" rel="stylesheet">

<style>
    /* Estilos generales con Montserrat */
    body {
        font-family: 'Montserrat', sans-serif;
        background: linear-gradient(rgba(38, 141, 215, 0.1), rgba(38, 141, 215, 0.1)), url('https://images.unsplash.com/photo-1571902943202-507ec2618e8f?ixlib=rb-4.0.3');
        background-size: cover;
        background-position: center;
        min-height: 100vh;
        margin: 0;
        padding: 0;
    }

    .form-container {
        background-color: rgba(255, 255, 255, 0.98);
        border-radius: 10px;
        padding: 30px;
        margin: 50px auto;
        box-shadow: 0 5px 20px rgba(38, 141, 215, 0.2);
        max-width: 600px;
        border-top: 4px solid #268DD7;
        font-family: 'Montserrat', sans-serif;
    }

    .form-title {
        color: #268DD7;
        margin-bottom: 20px;
        text-align: center;
        font-weight: 700;
    }

    h3 {
        color: #268DD7;
        font-family: 'Montserrat', sans-serif;
        text-align: center;
        font-weight: 600;
    }

    .btn {
        font-family: 'Montserrat', sans-serif;
        font-weight: 500;
    }

    .btn-danger {
        background-color: #dc3545;
        border-color: #dc3545;
        padding: 8px 25px;
    }

        .btn-danger:hover {
            background-color: #c82333;
            border-color: #bd2130;
        }

    .btn-secondary {
        color: #268DD7;
        border-color: #268DD7;
        background-color: transparent;
    }

        .btn-secondary:hover {
            background-color: rgba(38, 141, 215, 0.1);
        }

    .details-list {
        margin: 25px 0;
    }

    .details-item {
        display: flex;
        margin-bottom: 15px;
        padding-bottom: 10px;
        border-bottom: 1px solid #eee;
    }

    .details-label {
        font-weight: 600;
        color: #268DD7;
        min-width: 200px;
    }

    .details-value {
        flex: 1;
    }

    .button-group {
        display: flex;
        justify-content: center;
        gap: 20px;
        margin-top: 30px;
    }

    .confirmation-message {
        text-align: center;
        color: #dc3545;
        font-weight: 600;
        margin-bottom: 25px;
    }
</style>

<div class="form-container">
    <h2 class="form-title">GIMNASIO ITM</h2>
    <h3>ELIMINAR ACTIVIDAD</h3>

    <div class="confirmation-message">
        ¿Estás seguro que deseas eliminar esta actividad? Esta acción no se puede deshacer.
    </div>

    <div class="details-list">
        <div class="details-item">
            <div class="details-label">@Html.DisplayNameFor(model => model.NombreActividad)</div>
            <div class="details-value">@Html.DisplayFor(model => model.NombreActividad)</div>
        </div>

        <div class="details-item">
            <div class="details-label">@Html.DisplayNameFor(model => model.DescripcionActividad)</div>
            <div class="details-value">@Html.DisplayFor(model => model.DescripcionActividad)</div>
        </div>
    </div>

    <form asp-action="Delete">
        <input type="hidden" asp-for="IdActividad" />
        <div class="button-group">
            <button type="submit" class="btn btn-danger">Eliminar</button>
            <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
        </div>
    </form>
</div>