@model GYM_ITM.Models.Actividades

@{
    ViewData["Title"] = "Crear Actividad";
}

<!-- Agrega Montserrat desde Google Fonts -->
<link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600;700&display=swap" rel="stylesheet">

<style>
    /* Estilos generales con Montserrat */
    body {
        font-family: 'Montserrat', sans-serif;
        background: linear-gradient(rgba(38, 141, 215, 0.1), rgba(38, 141, 215, 0.1)), url('https://images.unsplash.com/photo-1571902943202-507ec2618e8f?ixlib=rb-4.0.3');
        background-size: cover;
        background-position: center;
        min-height: 100vh;
        margin: 0;
        padding: 0;
    }

    .form-container {
        background-color: rgba(255, 255, 255, 0.98);
        border-radius: 10px;
        padding: 30px;
        margin: 50px auto;
        box-shadow: 0 5px 20px rgba(38, 141, 215, 0.2);
        max-width: 600px;
        border-top: 4px solid #268DD7;
        font-family: 'Montserrat', sans-serif;
    }

    .form-title {
        color: #268DD7;
        margin-bottom: 20px;
        text-align: center;
        font-weight: 700;
    }

    h3 {
        color: #268DD7;
        font-family: 'Montserrat', sans-serif;
        text-align: center;
        font-weight: 600;
    }

    .btn {
        font-family: 'Montserrat', sans-serif;
        font-weight: 500;
    }

    .btn-primary {
        background-color: #268DD7;
        border-color: #268DD7;
        padding: 8px 25px;
    }

        .btn-primary:hover {
            background-color: #1E7BC4;
            border-color: #1E7BC4;
        }

    .btn-secondary {
        color: #268DD7;
        border-color: #268DD7;
        background-color: transparent;
    }

        .btn-secondary:hover {
            background-color: rgba(38, 141, 215, 0.1);
        }

    .form-control {
        font-family: 'Montserrat', sans-serif;
    }

        .form-control:focus {
            border-color: #268DD7;
            box-shadow: 0 0 0 0.25rem rgba(38, 141, 215, 0.25);
        }

    .control-label {
        font-weight: 500;
    }

    .button-group {
        display: flex;
        justify-content: center;
        gap: 20px;
        margin-top: 20px;
    }

    /* Estilo para el datalist */
    .custom-datalist {
        width: 100%;
        padding: 8px;
        border-radius: 4px;
        border: 1px solid #ced4da;
    }
</style>

<div class="form-container">
    <h2 class="form-title">GIMNASIO ITM</h2>
    <h3 class="mb-4">NUEVA ACTIVIDAD</h3>

    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group mb-3">
            <label asp-for="NombreActividad" class="control-label">Nombre de la Actividad</label>
            <input asp-for="NombreActividad" class="form-control custom-datalist" list="actividades" placeholder="Ej: Spinning, Crossfit, Yoga" required />
            <datalist id="actividades">
                <option value="Spinning"></option>
                <option value="Crossfit"></option>
                <option value="Yoga"></option>
                <option value="Aeróbicos"></option>
                <option value="Boxeo"></option>
                <option value="TRX"></option>
                <option value="Entrenamiento funcional"></option>
                <option value="Natación"></option>
                <option value="Baile: Zumba,salsa, bachata, merengue"></option>
                <option value="Artes Marciales"></option>
                <option value="Step"></option>

            </datalist>
            <span asp-validation-for="NombreActividad" class="text-danger"></span>
        </div>

        <div class="form-group mb-4">
            <label asp-for="DescripcionActividad" class="control-label">Descripción</label>
            <input asp-for="DescripcionActividad" class="form-control" placeholder="Descripción breve de la actividad" required />
            <span asp-validation-for="DescripcionActividad" class="text-danger"></span>
        </div>

        <div class="button-group">
            <button type="submit" class="btn btn-primary">Crear Actividad</button>
            <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
        </div>
    </form>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}