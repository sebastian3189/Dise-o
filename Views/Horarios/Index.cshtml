@model IEnumerable<GYM_ITM.Models.Horario>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FechaInicio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaFin)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdActividadNavigation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdEspacioNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FechaInicio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaFin)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.IdActividadNavigation.NombreActividad)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.IdEspacioNavigation.NombreEspacio)
            </td>
            <td>
                    <a asp-action="Edit" class="btn btn-warning" asp-route-id="@item.IdHorario">Edit</a> |
                    <a asp-action="Details" class="btn btn-primary" asp-route-id="@item.IdHorario">Details</a> |
                    <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.IdHorario">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
