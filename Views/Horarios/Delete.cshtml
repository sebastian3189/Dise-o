@model GYM_ITM.Models.Horario

@{
    ViewData["Title"] = "Confirmar Eliminación";
}

<!-- Fuente Montserrat -->
<link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600;700&display=swap" rel="stylesheet">

<style>
    body {
        font-family: 'Montserrat', sans-serif;
        background: linear-gradient(rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.5)), url('https://images.unsplash.com/photo-1571902943202-507ec2618e8f?ixlib=rb-4.0.3');
        background-size: cover;
        background-position: center;
        background-attachment: fixed;
        min-height: 100vh;
        margin: 0;
        padding: 0;
    }

    /* Navbar blanca */
    .navbar {
        background-color: white;
        padding: 15px 30px;
        display: flex;
        align-items: center;
        justify-content: space-between;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
    }

    .navbar-brand {
        font-weight: 700;
        font-size: 1.5rem;
        color: #268DD7;
        text-decoration: none;
    }

    .nav-links {
        display: flex;
        gap: 20px;
    }

    .nav-link {
        color: black;
        font-weight: 500;
        text-decoration: none;
    }

        .nav-link:hover {
            color: #555;
        }

    .alert-container {
        background-color: rgba(255, 255, 255, 0.98);
        border-radius: 10px;
        padding: 30px;
        width: 100%;
        max-width: 600px;
        box-shadow: 0 5px 25px rgba(0, 0, 0, 0.3);
        text-align: center;
        border-top: 5px solid #e74c3c;
        border-bottom: 2px solid #268DD7;
        margin: 50px auto;
    }

    .alert-title {
        color: #e74c3c;
        font-weight: 700;
        margin-bottom: 15px;
        font-size: 1.5rem;
    }

    .alert-message {
        color: #555;
        margin-bottom: 25px;
        font-weight: 500;
    }

    .horario-details {
        background-color: rgba(38, 141, 215, 0.08);
        border-radius: 8px;
        padding: 20px;
        margin: 20px 0;
        text-align: left;
        border-left: 3px solid #268DD7;
    }

    .detail-row {
        display: flex;
        margin-bottom: 12px;
        padding-bottom: 12px;
        border-bottom: 1px solid rgba(38, 141, 215, 0.15);
    }

    .detail-label {
        color: #268DD7;
        font-weight: 600;
        width: 180px;
    }

    .detail-value {
        flex: 1;
    }

    .button-group {
        display: flex;
        justify-content: center;
        gap: 15px;
        margin-top: 25px;
    }

    .btn {
        padding: 10px 25px;
        border: none;
        border-radius: 5px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s;
    }

    .btn-delete {
        background-color: #e74c3c;
        color: white;
    }

        .btn-delete:hover {
            background-color: #c0392b;
            transform: translateY(-2px);
        }

    .btn-cancel {
        background-color: #268DD7;
        color: white;
    }

        .btn-cancel:hover {
            background-color: #1E7BC4;
            transform: translateY(-2px);
        }
</style>

<!-- Contenedor de confirmación -->
<div class="alert-container">
    <h2 class="alert-title">⚠️ ELIMINAR HORARIO</h2>

    <p class="alert-message">
        Esta acción eliminará permanentemente este registro de horario:
    </p>

    <div class="horario-details">
        <div class="detail-row">
            <span class="detail-label">Fecha de Inicio:</span>
            <span class="detail-value">@Html.DisplayFor(model => model.FechaInicio)</span>
        </div>
        <div class="detail-row">
            <span class="detail-label">Fecha de Fin:</span>
            <span class="detail-value">@Html.DisplayFor(model => model.FechaFin)</span>
        </div>
        <div class="detail-row">
            <span class="detail-label">Actividad:</span>
            <span class="detail-value">@Html.DisplayFor(model => model.IdActividadNavigation.NombreActividad)</span>
        </div>
        <div class="detail-row">
            <span class="detail-label">Espacio:</span>
            <span class="detail-value">@Html.DisplayFor(model => model.IdEspacioNavigation.NombreEspacio)</span>
        </div>
    </div>

    <form asp-action="Delete">
        <input type="hidden" asp-for="IdHorario" />
        <div class="button-group">
            <button type="submit" class="btn btn-delete">
                <i class="fas fa-trash-alt"></i> Confirmar Eliminación
            </button>
            <a asp-action="Index" class="btn btn-cancel">
                <i class="fas fa-times"></i> Cancelar
            </a>
        </div>
    </form>
</div>

<!-- CDN para íconos -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">